<%= form_for(portfolio) do |f| %>
	
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<%= f.label 'Titulo' %>
				<%= f.text_field :title, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label 'Subtitulo' %>
				<%= f.text_field :subtitle, class: 'form-control' %>
			</div>
		</div>

		<div class="col-md-6">
			<div class="form-group">
				<%= f.label :body %>
				<%= f.text_area :body, class: 'form-control', rows: 10 %>
				<!-- rows lo que haces es hacer mas grande nuestro text area para que se visualize mejor-->
			</div>
		</div>
	</div>

	
	<hr>

	<h2>Tecnologias Usadas:</h2>
	<div>
		<%= f.fields_for :technologies do |technology_form| %>
		<div class="form-group">
			<%= technology_form.label :nombre %>
			<%= technology_form.text_field :name, class: 'form-control' %>
		</div>
		<% end %>
	</div>

	<div class="form-group">
		<%= f.submit 'Guardar', class: 'btn btn-primary btn-block' %>
	</div>

<% end %>