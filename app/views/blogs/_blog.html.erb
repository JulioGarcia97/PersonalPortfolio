<div class="blog-post">
  <h2 class="title"><%= link_to blog.title, blog %></h2>
  <p class="blog-post-meta">Publicado <%= distance_of_time_in_words(blog.created_at, Time.now) %></p>
	
	<% if logged_in?(:site_admin) %>
		<p class="links">
			<%= link_to blog.status, toggle_status_blog_path(blog), class: 'links' %> /
			<%= link_to 'Edit', edit_blog_path(blog), class: 'links' %> /
			<%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'links' %>
		</p>
	<% end %>

  <p><%= blog.body %></p>  
</div>
