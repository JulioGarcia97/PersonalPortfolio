<br>
<%= image_tag @portfolio_item.main_image unless
	@portfolio_item.thumb_image.nil? %>

<h2><%= @portfolio_item.title %></h2><br>
<h3><%= @portfolio_item.subtitle %></h3><br>
<p><%= @portfolio_item.body %></p><br><br>
<h2>Tecnologies Usadas</h2>
<% @portfolio_item.technologies.each do |t| %>
	<p><%= t.name %></p>
<% end %>

<%= link_to 'Atras', portfolios_path %>
<%= link_to 'Editar', edit_portfolio_path if logged_in?(:site_admin) %>
<%= link_to 'Eliminar', portfolio_path(@portfolio_item), method: :delete, data: {confirm: 'Estas seguro de eliminar este item?'} if logged_in?(:site_admin) %>