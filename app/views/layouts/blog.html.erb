<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

		<% if current_user.is_a?(User) %>
			<%= link_to 'Cerrar Sesion', destroy_user_session_path, method: :delete %>
		<% else %>
			<%= link_to 'Iniciar Sesion', new_user_session_path %>
			<%= link_to 'Crear Cuenta', new_user_registration_path %>
		<% end %>

		<%= yield %>
    
    <%= render "shared/nav", location: 'bottom' %>

    <% if session[:source] %>
      <p>Gracias por visitarme desde <%= session[:source] %> </p> 
    <% end %>
  </body>
</html>
